<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @client.name %>
</p>

<p>
  <b>Phone number:</b>
  <%= @client.phone_number %>
</p>

<p>
  <b>Address:</b>
  <%= @client.address %>
</p>

<p>
  <b>Notes:</b>
  <%= @client.notes %>
</p>

<h2>Appointments:</h2>
<% @client.appointments.each do |appointment| %>
  <p>
    <b>Date:</b>
    <%= appointment.date %>
  </p>
  <p>
    <b>Time:</b>
    <%= appointment.time %>
  </p>
  <p>
    <b>Notes:</b>
    <%= appointment.notes %>
  </p>
<% end %>

<h2>Add an appointment:</h2>
<%= form_for([@client, @client.appointments.build]) do |f| %>
  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_select :time %>
  </div>

  <br />

  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
    
<% end %>

<%= link_to 'Edit', edit_client_path(@client) %> |
<%= link_to 'Back', clients_path %>
